.checkbox {
  display: inline-block;
  vertical-align: center;
  margin-right: 12px;
}

.checkbox:hover {
  cursor: pointer;
}

.chooseCtr {
  display: inline-block;
  width: 15px;
  height: 15px;
  border: 1px solid var(--themeBackColor-FUI);
  margin-right: 4px;
  position: relative;
}

.choose1:after {
  content: "âœ”";
  font-size: 12px;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -6px;
  margin-left: -4px;
}

.choose {
  background-color: var(--themeBackColor-FUI);
}

.choose:after {
  display: inline-block;
  content: " ";
  width: 5px;
  height: 5px;
  border: 2px solid #FFFFFF;
  border-top: none;
  border-right: none;
  transform: rotate(-45deg);
  margin-left: 3px;
  margin-top: 1px;
  position: absolute;
}

